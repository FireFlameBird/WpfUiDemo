        <mah:HamburgerMenu.ContentTemplate>
            <DataTemplate
                DataType="{x:Type mah:HamburgerMenuImageItem}">
                <Grid
                    x:Name="TheContentGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ContentControl
                        x:Name="TheContent"
                        Grid.Row="1"
                        Focusable="False"
                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                        Content="{Binding Tag}" />
                </Grid>
            </DataTemplate>

        </mah:HamburgerMenu.ContentTemplate>
